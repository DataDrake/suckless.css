!!! html5
%html
  %head
    %link{rel:'stylesheet',type:"text/css",href:"css/suckless.css"}
  %body
    .row
      .col-12.col-md-3.col-lg-4.black
        %h1 lg-4
      .col-12.col-md-6.col-lg-4.red
        %h1 lg-4
      .col-12.col-md-3.col-lg-4.black
        %h1 lg-4
    .row
      .col-4.col-lg-3.black
        %h1 lg-3
      .col-4.col-lg-6.red
        %h1 lg-6
      .col-4.col-lg-3.black
        %h1 lg-3
    .row
      .col-2.black
        %h1 lg-2
      .col-4.red
        %h1 lg-4
      .col-2.black
        %h1 lg-6
    .row
      .button-group.expand
        %a.button Button
        %a.button Button
        %a.button Button
        %a.button Button
    .row
      .pad
        .button-group.expand.hollow.radius.large
          %a.button Button
          %a.button Button
          %a.button Button
          %a.button Button
    .row
      %a.button.tiny Tiny
      %a.button.col-small Small
      %a.button Normal
      %a.button.large Large
    .row
      %a.button.tiny.hollow Tiny
      %a.button.col-small.hollow Small
      %a.button.hollow Normal
      %a.button.large.hollow Large
    .row
      %a.button.col-small.hollow.radius Radius
      %a.button.large.hollow.round Round
    .row
      .pad
        %a.button.large.expand Large Expanded
    %ul.menu.expand
      %li
        %a Home
      %li.dropdown
        %span Dropdown
        %ul.menu.vertical
          %li
            %a Item 1
          %li
            %a Item 2
          %li
            %a Item 3
    %ul.menu.vertical
      %li
        %a Item 1
      %li
        %ul.menu
          %li
            %a This is a really long item
          %li
            %a Item B
          %li
            %a Item C
      %li
        %a Item 3
